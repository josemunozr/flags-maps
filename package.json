{
  "name": "flags-maps",
  "version": "1.0.0",
  "description": "Creation markers/flags in real time with google maps",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/josemunozr/flags-maps.git"
  },
  "keywords": [
    "marker",
    "maps",
    "googlemaps"
  ],
  "author": "José Muñoz R",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/josemunozr/flags-maps/issues"
  },
  "homepage": "https://github.com/josemunozr/flags-maps#readme",
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-preset-es2015": "^6.6.0",
    "browserify-shim": "^3.8.12",
    "gulp": "^3.9.1",
    "jade": "^1.11.0",
    "standard": "^6.0.8"
  },
  "dependencies": {
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "express": "^4.13.4",
    "jquery": "^2.2.2",
    "materialize-css": "^0.97.5"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "public": "mkdir -p public && mkdir -p public/img/",
    "cp-file": "cp src/client/asset/img/*.png public/img/ && cp src/client/asset/*.css public/",
    "build-js": "NODE_PATH=. browserify -t [ babelify --presets [ es2015 ] ] src/client/index.js > public/app.js",
    "build": "npm run public && npm run cp-file && npm run build-js",
    "jade": "jade -w src/client/*.jade --out public/",
    "lint": "standard",
    "dist": "babel src/server/index.js src/server/**/*.js --out-dir dist --presets es2015",
    "serve": "NODE_PATH=./dist node dist/src/server",
    "start": "npm run lint && npm run dist && npm run build && npm run serve"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browser": {
    "jquery": "./node_modules/jquery/dist/jquery.js",
    "materialize": "./node_modules/materialize-css/dist/js/materialize.min.js"
  },
  "browserify-shim": {
    "jquery": "$",
    "materialize": "materialize"
  }
}
